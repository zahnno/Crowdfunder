<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<div class="top-banner">

  <div class="crowd-logo"> 
  <a href="/projects"><img src="http://dacura.cs.tcd.ie/wp-content/uploads/2014/04/icon_4199.png"></a>
  </div>
  <a href="/projects">
  <div class="web-logo">
    <h1>Crowd</h1><h1 style="color:#990099;">Funder</h1>
  </div>
  </a>

	<% if current_user %>
       <div class = "signup">
     <%= link_to "Log out", session_path("current"), :method => :delete %>
     </div>
     <div class = "login">
     <%= link_to "Profile", current_user %>
     </div>
	<% else %>


	   <div class = "signup">
	     <%= link_to "Sign up", new_user_path %>
	   </div>

	   <div class = "login">
	     <%= link_to "Log in", new_session_path %> 
	   </div>
	<% end %>

	<div class = "project">
	<%= link_to "Projects", projects_path%><br>
	</div>

  <div class = "discover">
  <%= link_to "Discover", categories_path %>
  </div>

</div>

<body>
<% if flash[:notice] %>
      <p id="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p id="alert"><%= flash[:alert] %></p>
    <% end %>
    
    

<%= yield %>
<div class="footer">
      <% if current_user %>
        Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
        <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
      <% end %>
    </p>
</div>

</body>
</html>
